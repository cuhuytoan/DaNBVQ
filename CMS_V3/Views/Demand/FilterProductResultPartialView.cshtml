@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Common;

@model HNM.DataNC.ModelsNC.ModelsDTO.ProductPaggingDTO

@{
    var FilterModel = (HNM.DataNC.ModelsFilter.ProductFilter)ViewBag.FilterModel;
    var ProductPaging = (X.PagedList.IPagedList<HNM.DataNC.ModelsNC.ModelsDTO.ProductSearchResultDTO>)ViewBag.ProductPaging;
    var ProductCategoryCurrent = (HNM.DataNC.ModelsNC.ModelsDTO.ProductCategoryDTO)ViewBag.ProductCategoryCurrent;
    var productTypeId = (int)ViewBag.ProductTypeId;
}
@if (Model.TotalRecord > 0)
{
    <div class="article-content pt-2 px-1 bg-white">
        <div class="d-block d-lg-flex justify-content-lg-between align-items-center mt-2 mb-4 pagging">
            @*<span class=" mx-1 justify-content-start">Tìm thấy @Model.TotalRecord kết quả</span>*@
            <h3 class="text-uppercase mx-1 font-weight-bold justify-content-start">Tất cả @ProductCategoryCurrent.Name</h3>
            <div class="justify-content-md-end justify-content-center align-items-center d-block d-sm-flex text-center">
                <span class="justify-content-end m-0 mr-2 numperpage">Số sản phẩm / Trang:</span>
                <select name="" onchange="SelectPageSize(this)" class="justify-content-end">
                    <option value="20" selected="@(FilterModel.PageSize == 20 ? "selected" : null)">20</option>
                    <option value="5" selected="@(FilterModel.PageSize == 5 ? "selected" : null)">5</option>
                    <option value="10" selected="@(FilterModel.PageSize == 10 ? "selected" : null)">10</option>
                    <option value="15" selected="@(FilterModel.PageSize == 15 ? "selected" : null)">15</option>
                    <option value="25" selected="@(FilterModel.PageSize == 25 ? "selected" : null)">25</option>
                    <option value="30" selected="@(FilterModel.PageSize == 30 ? "selected" : null)">30</option>
                </select>
                <nav aria-label="Page navigation " class="justify-content-sm-end justify-content-center mx-2">
                    <ul class="pagination m-0">
                        @Html.PagedListPager(ProductPaging, page => ("/Product/FilterProductResultPartialView?pageSize=" + FilterModel.PageSize + "&page=" + page),
                        new PagedListRenderOptions
                        {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" },
                            DisplayEllipsesWhenNotShowingAllPageNumbers = false,
                            DisplayLinkToLastPage = X.PagedList.Web.Common.PagedListDisplayMode.Never,
                            MaximumPageNumbersToDisplay = 5,
                        }
                        )
                    </ul>

                </nav>
            </div>
        </div>
        <div class="row m-0">
            @foreach (var item in Model.Data)
            {
                <div class="col-2-5 col-md-3 col-sm-4 col-6 pb-2">
                    <div class="card">
                        <a href="/@item.FullURL" class="d-flex flex-column">
                            <div class="image"><div class="img" style="background-image:url('@item.UrlImage') "></div></div>
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title">@item.Name</h6>
                                <div class="d-flex justify-content-between mt-1 mt-auto">
                                    <span class="d-flex address text-muted justify-content-start">@item.LocationName</span>
                                    <span class="d-flex time text-muted justify-content-end">@HNM.CommonNC.Utils.RenderTimeSince((DateTime)@item.LastEditDate)</span>
                                </div>
                                @if (item.Price > 0)
                                {
                                    <h4 class="price">@HNM.CommonNC.Utils.RenderPrice(item.Price) <span class="curency">đ</span></h4>
                                }
                                else
                                {
                                    <h4 class="price"> Liên hệ</h4>
                                }
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
        <div class="d-block d-lg-flex justify-content-lg-between align-items-center mt-2 mb-4 pagging">
            <span class=" mx-1 justify-content-start">Tìm thấy @Model.TotalRecord kết quả</span>
            <div class="justify-content-md-end justify-content-center align-items-center d-block d-sm-flex text-center">
                <span class="justify-content-end m-0 mr-2 numperpage">Số sản phẩm / Trang:</span>
                <select name="" onchange="SelectPageSize(this)" class="justify-content-end">
                    <option value="20" selected="@(FilterModel.PageSize == 20 ? "selected" : null)">20</option>
                    <option value="5" selected="@(FilterModel.PageSize == 5 ? "selected" : null)">5</option>
                    <option value="10" selected="@(FilterModel.PageSize == 10 ? "selected" : null)">10</option>
                    <option value="15" selected="@(FilterModel.PageSize == 15 ? "selected" : null)">15</option>
                    <option value="25" selected="@(FilterModel.PageSize == 25 ? "selected" : null)">25</option>
                    <option value="30" selected="@(FilterModel.PageSize == 30 ? "selected" : null)">30</option>
                </select>
                <nav aria-label="Page navigation " class="justify-content-sm-end justify-content-center mx-2">
                    <ul class="pagination m-0">
                        @Html.PagedListPager(ProductPaging, page => ("/Product/FilterProductResultPartialView?pageSize=" + FilterModel.PageSize + "&page=" + page),
                        new PagedListRenderOptions
                        {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" },
                            DisplayEllipsesWhenNotShowingAllPageNumbers = false,
                            DisplayLinkToLastPage = X.PagedList.Web.Common.PagedListDisplayMode.Never,
                            MaximumPageNumbersToDisplay = 5,
                        }
                        )
                    </ul>

                </nav>
            </div>
        </div>
    </div>
}
else
{
    <div class="article-content px-1 bg-white mt-3">
        <div class="row m-0">
            <div class="text-center search-notfound py-3">
                <lottie-player src="./json/search-empty.json" background="transparent" speed="1" style="width: 300px; height: 300px;" loop="" autoplay=""></lottie-player>
                <h5>Không có kết quả phù hợp.</h5>
                <p>Xin lỗi, chúng tôi không tìm thấy kết quả nào phù hợp với yêu cầu của bạn. Vui lòng tìm kiếm sản phẩm khác!</p>
            </div>
        </div>
    </div>
}

<script>
    $(function () {

        var getPage = function () {
            var productCategoryId = $('#filter_category option').filter(':selected').val();
            var manufactureId = $('#filter_manu option').filter(':selected').val();
            var productModelId = $('#filter_model option').filter(':selected').val();
            var locationId = $('#filter_location option').filter(':selected').val();
            
            var $a = $(this);
            var pageClick = $a.attr("href").split("page=")[1];
            var options = {
                url: $a.attr("href"),
                data: {
                    "productTypeId": @productTypeId,
                    "productCategoryId": productCategoryId,
                    "ProductManufactureId": manufactureId,
                    "productModelId": productModelId,
                    "locationId": locationId,
                    "page": pageClick,
                    "pageSize": 20,
                },
                type: "get"
            };

            $.ajax(options).done(function (response) {
                $('.category-panel').html(response);
            });
            return false;
        };


        $(".article-content").on("click", "ul.pagination li a", getPage);

    });

    function SelectPageSize(sel) {
        FilterProductPartialView_ChangeSize('@FilterModel.Page',sel.value);
    }
</script>