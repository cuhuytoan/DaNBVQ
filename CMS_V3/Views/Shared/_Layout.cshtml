    <!-- Modal Login -->
   
  
            <div class="modal" id="login_modal" tabindex="-1" role="dialog" aria-labelledby="popup" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="text-right mx-1">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="bg-white py-5 account mx-auto px-2">
                                <div class="header-box text-center ">
                                    <a href="/"><img src="~/Assets/images/LogoVQ.png" /></a>
                                    <h3 class="text-uppercase mt-1">ĐĂNG NHẬP</h3>
                                </div>
                                <div class="content-box  mx-auto text-left">
                                    <form id="login" class="" action="/tai-khoan">
                                        <div class="form-group">
                                            <label for="inputAddress">Số điện thoại:</label>
                                            <input type="text" pattern="\d*" maxlength="10" id="username" class="form-control" placeholder="Nhập số điện thoại của bạn">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputAddress">Mật khẩu:</label>
                                            <input type="password" id="pwd" class="form-control">
                                        </div>
                                        <p class="text-right">@Html.ActionLink("Bạn quên mật khẩu?", "ForgotPassword", "Account", null, new { @class = "ajaxcall" })</p>

                                        <div class=" justify-content-center d-flex mt-5">
                                            <button type="submit" id="login_submit" class="btn btn-primary mb-2">Đăng nhập</button>
                                        </div>
                                        <p class="text-center">Bạn chưa có tài khoản? @Html.ActionLink("Đăng ký ngay", "Register", "Account", null, new { @class = "ajaxcall" })</p>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        

            <script type="text/javascript">
        $(document).ready(function () {

           if (@ViewData["showLogin"] == "1") {
                $("#login_modal").modal();
            }


            //$.ajax({
            //    url: "/Account/Login",
            //    type: "GET",
            //    success: function (response) {
            //        $('.modal-body').html(response);
            //    },
            //    error: function () {
            //        console.log('Set password Fail!!!');
            //    }
            //});
        });
        $('#login').on('submit', function (e) {
            e.preventDefault();
            var username = $("#username").val();
            var pwd = $("#pwd").val();
            if (jQuery.trim(username) == "") {
                toastr["error"]("Tài khoản không được nhập toàn bộ là khoảng trắng");
                return false;
            }
            if (jQuery.trim(pwd) == "") {
                toastr["error"]("Mật khẩu không được nhập toàn bộ là khoảng trắng");
                return false;
            }
            if (username == "") {
                toastr["error"]("Tài khoản không được để trống!");
                $("#username").focus();
                return;
            }
            if (pwd == "") {
                toastr["error"]("Mật khẩu không được để trống!");
                $("#pwd").focus();
                return;
            }
            var model = {
                "Email": $("#username").val(),
                "Password": $("#pwd").val()
            };
            $.ajax({
                url: "/Account/Login",
                type: "POST",
                data: JSON.stringify(model),
                dataType: "json",
                contentType: "application/json",
                success: function (response) {
                    var result = JSON.parse(response);
                    if (result.ErrorCode == "00") {
                        $('#login_modal').modal('hide');
                        

                        window.location.href = '@ViewData["returnUrl"]';
                    }
                    else {
                        toastr["error"](result.Message);
                    }
                },
                error: function () {
                    console.log('Login Fail!!!');
                }
            });

        });
            </script>

  
