@{
    var Menu = (List<HNM.DataNC.ModelsNC.ModelsDTO.ListAllProductCategoryDTO>)ViewBag.ProductCategory;
    var MenuHeader = (List<HNM.DataNC.ModelsNC.ModelsDTO.ArticleCategoryDTO>)ViewBag.MenuHeader;
}

<article>
    <div class="mt-2 bg-white mx-3 menu-news">
        <div class="d-flex align-items-center">
            <div class="menu col-2 pl-0 d-lg-block d-none">
                <div class="card">
                    <div class="card-header text-uppercase pl-2 show_menu">
                        <h4 class="d-flex align-items-center"><img class="mr-2" src="~/Assets/images/category.png" />Danh Mục</h4>
                    </div>
                    <div class="card-body p-0" id="my-menu">
                        <ul>
                            @foreach (var p in Menu)
                            {
                                <li class="has-child">
                                    <a href="#" )>@p.Parent.Name</a>
                                    <ul>
                                        @{
                                            if (p.Child.Count() > 0)
                                            {
                                                foreach (var x in p.Child)
                                                {
                                                    <li><a href=@($"ban-{x.URL}.pcat")>@x.Name</a></li>
                                                }
                                            }

                                        }
                                    </ul>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <ul class="nav   my-0">
                <li class="nav-item"><a class="active" href="/tin-tuc">Tin tức</a></li>                
                <li class="nav-item"><a href="/chuyen-muc-video">Video</a></li>
            </ul>
        </div>

    </div>

    <div class="bg-white mx-3 menu-news-bottom d-block d-lg-flex">
        <span class="navbar-brand d-inline-block d-lg-none px-2" href="#">Danh mục</span>

        <button class="navbar-toggler d-inline-block d-lg-none btn-news-menu" type="button" data-toggle="collapse" data-target="#navbarNav-catemenu" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <ul class="nav my-0 py-2 col-xl-11 col-lg-10 menu-news-bottom collapse" id="navbarNav-catemenu">
            @if (ViewBag.CateId != null)
            {
                <li class="nav-item"><a href="/tin-tuc">Trang Chủ</a></li>

            }
            else
            {
                <li class="nav-item"><a href="/tin-tuc" class="active">Trang Chủ</a></li>
            }
            @{
                var stt = 1;
            }
            @foreach (var item in MenuHeader)
            {
                var i = stt++;
                if (i != 1)
                {
                    @if (ViewBag.CateId == item.ArticleCategory_ID)
                    {
                        <li class="nav-item"><a class="active" href="/chuyen-muc/@item.URL">@item.Name</a></li>
                    }
                    else
                    {
                        <li class="nav-item"><a href="/chuyen-muc/@item.URL">@item.Name</a></li>
                    }
                }
            }

        </ul>
        <div class="col-xl-1 col-lg-2 p-0 border-left news-more d-none d-lg-block">
            <a class="more-news" href="#">Thêm</a>
            <div class="more-news-dropdow" style="display: none;">
                <ul class="list-unstyled my-2">
                    <!-- auto set values li -->
            </div>
        </div>
    </div>

</article>