
<style>
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }

    .hideMe {
        display: none;
    }
</style>

@*Step1*@
<div id="modalRegister1" class="bg-white py-5 account mx-auto px-2">
    <div class="header-box text-center  mb-5">        
        <h3 class="text-uppercase mt-1">ĐĂNG KÝ</h3>
    </div>
    <div class="content-box  mx-auto text-left">
        <form id="registerStep1" class="">
            <div class="form-group">
                <label for="inputAddress">Số điện thoại:</label>
                <input type="text" pattern="\d*" maxlength="10" id="username" class="form-control" placeholder="Nhập số điện thoại của bạn" onkeydown="javascript: return event.keyCode === 8 ||event.keyCode === 46 ? true : !isNaN(Number(event.key))" />
            </div>
                       

            <ul class="progressbar-account m-0 d-table">
                <li class="step1 active"><div class="counter">1</div></li>
                <li class="step2"><div class="counter">2</div></li>
                <li class="step3"><div class="counter">3</div></li>

            </ul>
            <div class=" justify-content-center d-flex mt-3">
                <button type="submit" class="btn btn-primary mb-2">Tiếp theo </button>

            </div>
            <p class="text-center">Bạn đã có tài khoản? @Html.ActionLink("Đăng nhập", "Login", "Account", null, new { @class = "ajaxcall" })</p>
        </form>
    </div>
</div>

@*Step2*@
<div id="modalRegister2" class="bg-white py-5 account mx-auto px-2 hideMe">
    <div class="header-box text-center  mb-5">        
        <h3 class="text-uppercase mt-1">ĐĂNG KÝ</h3>
    </div>
    <div class="content-box  mx-auto text-left">
        <form id="registerStep2" class="">
            <div class="form-group">
                <label for="inputAddress">Nhập mã code xác thực: 123456</label>
                <input id="verifyCode" type="text" pattern="\d*" maxlength="6" class="form-control" placeholder="Nhập mã OTP" onkeydown="javascript: return event.keyCode === 8 ||event.keyCode === 46 ? true : !isNaN(Number(event.key))">
                @*<span class="time-otp">Mã OTP sẽ được gửi đến trong <span class="time-count">60</span>s</span>*@
                @*<button type="button" class="btn btn-success btn-block" id="resend" style="color: white" onclick="resendOTP()">Gửi lại OTP <span id="timedown"></span></button>*@
            </div>

            <div class="note  pt-4">
                <p>Bước 2: Nhập mã xác thực </p>
            </div>

            <ul class="progressbar-account m-0 d-table">
                <li class="step1 complete"><div class="counter">1</div></li>
                <li class="step2 active"><div class="counter">2</div></li>
                <li class="step3"><div class="counter">3</div></li>

            </ul>
            <div class=" justify-content-center d-flex mt-3">
                <button type="submit" class="btn btn-primary mb-2">Xác nhận</button>
            </div>
            <p class="text-center">Bạn đã có tài khoản? @Html.ActionLink("Đăng nhập", "Login", "Account", null, new { @class = "ajaxcall" })</p>
        </form>
    </div>
</div>
@*Step3*@
<div id="modalRegister3" class="bg-white py-5 account mx-auto px-2 hideMe">
    <div class="header-box text-center mb-5">        
        <h3 class="text-uppercase mt-1">ĐĂNG KÝ</h3>
    </div>
    <div class="content-box  mx-auto text-left">
        <form id="registerStep3" class="">
            <div class="form-group">
