@model Tuple<List<HNM.DataNC.ModelsStore.Library_Search_By_Cate_Result>, HNM.DataNC.ModelsNC.ModelsDTO.LibraryCategoryDTO>

<article>
    <div class="article-content pt-2 px-1 pb-3 bg-white">
        <div class="d-flex justify-content-between align-items-center mt-2 mb-4 px-3">
            <h3 class="  mx-1  font-weight-bold justify-content-start">@Model.Item2.Name</h3>
            <div class="justify-content-end  align-items-center d-flex">
                <ul class="  m-0 list-unstyled">
                    <li>
                        <a href="/thu-vien-kien-thuc/@Model.Item2.URL">Xem tất cả >></a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row m-0">
            @{
                var stt = 1;
            }
            @foreach (var item in Model.Item1)
            {
                var i = stt++;
                if (i == 1)
                {
                    <div class="news-left col-xl-6 col-lg-8 col-md-8 col-sm-12 border-right">
                        <div class="news">
                            <a href="/kien-thuc/@item.URL">
                                <img class="card-img -top" src="" data-src="@item.FullUrlImage" alt="@item.Title">
                                <div class="card-body">
                                    <h4 class="card-title">@item.Title</h4>
                                    <p class="card-text my-2">
                                        @item.Description
                                    </p>
                                    <div class="d-flex justify-content-end">
                                        <span class="time text-muted">@Utils.RenderTimeSince(Convert.ToDateTime(item.LastEditDate))</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }

            <div class="news-center col-xl-3 col-lg-4 col-md-4 col-sm-12 col-12 border-right">
                @{
                    var stt2 = 1;
                }

                @foreach (var item in Model.Item1)
                {
                    var i2 = stt2++;
                    if (i2 == 2 || i2 == 3)
                    {
                        if (i2 == 2)
                        {
                            <div class="news news-sm border-bottom mb-4 pb-1 col-md-12 col-sm-6 col-12 px-0">
                                <a href="/kien-thuc/@item.URL">
                                    <img class="card-img -top" src="@item.FullUrlImage" data-src="@item.FullUrlImage" alt="@item.Title">
                                    <div class="card-body p-0 pb-2">
                                        <h6 class="card-title mt-2">@item.Title</h6>
                                        <div class="d-flex justify-content-end mt-3">
                                            <span class="time text-muted">@Utils.RenderTimeSince(Convert.ToDateTime(item.LastEditDate))</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="news news-sm pb-1  col-md-12 col-sm-6 col-12 px-0">
                                <a href="/kien-thuc/@item.URL">
                                    <img class="card-img -top" src="@item.FullUrlImage" data-src="@item.FullUrlImage" alt="@item.Title">
                                    <div class="card-body p-0  pb-1">
                                        <h6 class="card-title mt-2">@item.Title</h6>
                                        <div class="d-flex justify-content-end mt-3">
                                            <span class="time text-muted">@Utils.RenderTimeSince(Convert.ToDateTime(item.LastEditDate))</span>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                }

            </div>

            <div class="news-right col-xl-3 col-lg-12 col-md-12 col-sm-12 col-12 ">
                @{
                    var stt3 = 1;
                }

                @foreach (var item in Model.Item1)
                {
                    var i3 = stt3++;
                    if (i3 != 1 && i3 != 2 && i3 != 3)
                    {
                        <div class="col-xl-12 col-md-6 col-sm-6 col-12 news news-vsm border-bottom mb-2 pb-2  px-0">
                            <a href="/kien-thuc/@item.URL">
                                <div class="card-body d-flex align-items-center p-0">
                                    <div class="col-7 mx-0 p-0"><h6 class="card-title">@item.Title</h6></div>
                                    <div class="col-5 ml-1 mr-0 p-0"><img class="card-img -top" src="@item.FullUrlImage" data-src="@item.FullUrlImage" alt="@item.Title"></div>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</article>

<div>
    <div class="border-top border-bottom"></div>
</div>