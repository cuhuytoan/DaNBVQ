                            ModelId: ModelIdExt,
                            ModelName: value
                        };

                        list.push(objAdd);
                        console.log(objAdd);
                    }
                });
            }
        }
        else {
            if (ModelId == "") {
                toastr["error"]("Model không được để trống");
                return false;
            }
            var obj = {
