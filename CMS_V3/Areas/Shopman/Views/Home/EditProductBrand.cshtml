    <script>
        var upload = new FileUploadWithPreview("img-logo", {
        text: {
            chooseFile: "",
            browse: "Chọn logo"
        },
        presetFiles: ["@Model.UrlLogoImage"]
    });
    var upload1 = new FileUploadWithPreview("img-cover", {
