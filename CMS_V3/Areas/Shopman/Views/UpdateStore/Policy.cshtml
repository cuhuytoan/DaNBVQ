@model HNM.DataNC.ModelsNC.ModelsDTO.ArticleDTO
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@using Mono.Web

<div class="bg-white px-0 mx-auto px-lg-5">
    <div class="header-box text-center noti-success mb-2">
        <h3 class="text-uppercase mt-1 text-primary">ĐIỀU KHOẢN SỬ DỤNG</h3>
    </div>

    <div class="content-box mx-auto text-left px-0 px-md-4 my-2 py-4 box-shadow">
        <p style="text-align:justify">
            @Html.Raw(HttpUtility.HtmlDecode(Model.Content))
        </p>
    </div>

    <div class="form-group d-flex align-items-center my-2">
        <input name="" value="" id="privacy-agree" class="" type="radio">
        <label for="privacy-agree" class=" my-0 mx-2"> Tôi đồng ý với chính sách của Hanoma</label>
    </div>

    <div class=" justify-content-center d-block text-center mt-3">
        <button type="button" class="btn btn-primary mb-2 privacy-close">Hoàn tất</button>
    </div>
</div>

